{
  "manifest_version": 3,
  "name": "Advanced Chess - Sidebar Game",
  "version": "1.1.0",
  "description": "Advanced chess in the Chrome side panel with themes, sounds, flip board, time controls, and saved preferences.",
  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "Open Chess Game"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
